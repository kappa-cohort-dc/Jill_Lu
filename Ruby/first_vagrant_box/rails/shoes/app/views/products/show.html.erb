
<a href='/users/show/<%=current_user.id%>'>My Dashboard</a>

<h4>Greetings, <%=current_user.first_name%>!</h4>


<h4> All Products </h4>

<form action='/users/show/<%=current_user.id%>' method='post'>
  <table>
    <thead>
      <tr>
        <th> Product</th>
        <th> Seller</th>
        <th> Date Posted </th>
        <th> Amount</th>
        <th> Action </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |shoe| %>
      <tr>
        <td><%= shoe.name %></td>
        <td> <%=shoe.user.first_name %> <%=shoe.user.last_name %></td>
        <td> <%=shoe.created_at.strftime('%b %d, %Y')%></td>
        <td> <%=number_to_currency(shoe.price)%></td>
        <td> <a href='/products/buy/<%=shoe.id%>'> Buy</a> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
